   "source": [
    "Step 1: Download MiBiG 4.0 gbk file"
   ]
  },
  {
   "cell_type": "markdown",
   "id": "484fb525-7bb8-4a8f-91d1-50f65509b962",
   "metadata": {},
   "source": [
    "Step 2: Extraction KR domain in PKS and PKS/NRPS "
   ]
  },
  {
   "cell_type": "raw",
   "id": "b76305e2-363c-42cd-a5ef-8e16e208c1e7",
   "metadata": {},
   "source": [
    "import os\n",
    "import re\n",
    "from Bio import SeqIO\n",
    "\n",
    "gbk_dir = \"mibig_gbk_4.0\" \n",
    "output_prefix_pks = \"pks_KRs\"\n",
    "output_prefix_pks_nrps = \"pks_nrps_KRs\"\n",
    "\n",
    "kr_pks = []\n",
    "kr_pks_nrps = []\n",
    "\n",
    "for filename in os.listdir(gbk_dir):\n",
    "    if not filename.endswith(\".gbk\"):\n",
    "        continue\n",
    "\n",
    "    gbk_path = os.path.join(gbk_dir, filename)\n",
    "    try:\n",
    "        record = SeqIO.read(gbk_path, \"genbank\")\n",
    "    except Exception as e:\n",
    "        print(f\"⚠️ Could not parse {filename}, skipping. Error: {e}\")\n",
    "        continue\n",
    "\n",
    "    # Identify subregion type from label\n",
    "    subregion_type = None\n",
    "    for feature in record.features:\n",
    "        if feature.type == \"subregion\" and \"label\" in feature.qualifiers:\n",
    "            label = feature.qualifiers[\"label\"][0].strip().lower()\n",
    "            if label in [\"polyketide\", \"polyketide, other\", \"pks\", \"pks, other\"]:\n",
    "                subregion_type = \"PKS\"\n",
    "            elif \"nrp\" in label and \"polyketide\" in label:\n",
    "                subregion_type = \"PKS_NRPS\"\n",
    "            elif \"nrps\" in label and \"pks\" in label:\n",
    "                subregion_type = \"PKS_NRPS\"\n",
    "            break\n",
    "\n",
    "    if subregion_type is None:\n",
    "        continue\n",
    "\n",
    "    organism = record.annotations.get(\"organism\", \"Unknown\")\n",
    "\n",
    "    for feature in record.features:\n",
    "        if feature.type != \"CDS\" or \"NRPS_PKS\" not in feature.qualifiers or \"translation\" not in feature.qualifiers:\n",
    "            continue\n",
    "\n",
    "        aa_seq = feature.qualifiers[\"translation\"][0]\n",
    "        gene = feature.qualifiers.get(\"gene\", [\"unknown\"])[0]\n",
    "\n",
    "        # Parse domains\n",
    "        domains = []\n",
    "        for line in feature.qualifiers[\"NRPS_PKS\"]:\n",
    "            match = re.search(r\"Domain: ([A-Za-z_]+).*?\\((\\d+)-(\\d+)\\)\", line)\n",
    "            if match:\n",
    "                domains.append({\n",
    "                    \"type\": match.group(1).replace(\"PKS_\", \"\"),  # normalized type\n",
    "                    \"start\": int(match.group(2)),\n",
    "                    \"end\": int(match.group(3))\n",
    "                })\n",
    "\n",
    "        # For each KR, find the surrounding KS/AT..ACP/PP window and check for DH/ER\n",
    "        for i, d in enumerate(domains):\n",
    "            if d[\"type\"] != \"KR\":\n",
    "                continue\n",
    "\n",
    "            # find nearest KS or AT before this KR\n",
    "            start_idx = None\n",
    "            for j in range(i - 1, -1, -1):\n",
    "                if domains[j][\"type\"] in [\"KS\", \"AT\"]:\n",
    "                    start_idx = j\n",
    "                    break\n",
    "\n",
    "            # find nearest ACP or PP after this KR\n",
    "            end_idx = None\n",
    "            for j in range(i + 1, len(domains)):\n",
    "                if domains[j][\"type\"] in [\"ACP\", \"PP\"]:\n",
    "                    end_idx = j\n",
    "                    break\n",
    "\n",
    "            if start_idx is None or end_idx is None:\n",
    "                continue\n",
    "\n",
    "            module = domains[start_idx:end_idx + 1]\n",
    "            types_in_module = [m[\"type\"] for m in module]\n",
    "\n",
    "            if \"DH\" in types_in_module or \"ER\" in types_in_module:\n",
    "                continue \n",
    "\n",
    "            # extract KR domain\n",
    "            kr_seq = aa_seq[d[\"start\"] - 1 : d[\"end\"]]\n",
    "            kr_entry = {\n",
    "                \"file\": filename,\n",
    "                \"organism\": organism,\n",
    "                \"gene\": gene,\n",
    "                \"domain_type\": d[\"type\"],\n",
    "                \"start\": d[\"start\"],\n",
    "                \"end\": d[\"end\"],\n",
    "                \"cds_location\": str(feature.location),\n",
    "                \"sequence\": kr_seq\n",
    "            }\n",
    "            if subregion_type == \"PKS\":\n",
    "                kr_pks.append(kr_entry)\n",
    "            elif subregion_type == \"PKS_NRPS\":\n",
    "                kr_pks_nrps.append(kr_entry)\n",
    "\n",
    "\n",
    "def save_kr_output(kr_list, prefix):\n",
    "    with open(f\"{prefix}.tsv\", \"w\") as f:\n",
    "        f.write(\"File\\tOrganism\\tGene\\tDomain\\tStart\\tEnd\\tCDS_Location\\tSequence\\n\")\n",
    "        for kr in kr_list:\n",
    "            f.write(f\"{kr['file']}\\t{kr['organism']}\\t{kr['gene']}\\t{kr['domain_type']}\\t{kr['start']}\\t{kr['end']}\\t{kr['cds_location']}\\t{kr['sequence']}\\n\")\n",
    "\n",
    "    with open(f\"{prefix}.fasta\", \"w\") as f:\n",
    "        for i, kr in enumerate(kr_list, 1):\n",
    "            header = f\">{kr['gene']}_KR_{i}|{kr['organism']}|{kr['file']}\"\n",
    "            f.write(f\"{header}\\n{kr['sequence']}\\n\")\n",
    "\n",
    "\n",
    "save_kr_output(kr_pks, output_prefix_pks)\n",
    "save_kr_output(kr_pks_nrps, output_prefix_pks_nrps)\n",
    "\n",
    "print(f\"✅ Finished! Extracted {len(kr_pks)} clean KR domains in PKS and {len(kr_pks_nrps)} in PKS/NRPS.\")\n"
   ]
  }
 ],
